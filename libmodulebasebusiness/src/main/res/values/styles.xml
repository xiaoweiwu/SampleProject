<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/common_text_color</item>
        <!--<item name="android:windowBackground">@color/white</item>-->
    </style>

    <style name="FSBAppTheme" parent="BaseAppTheme">
        <item name="android:textViewStyle">@style/content</item>
        <item name="android:editTextStyle">@style/content</item>
        <item name="android:windowBackground">@color/common_grey_background</item>
        <!--<item name="android:checkboxStyle">@style/checkboxStyle</item>-->
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
    </style>


    <style name="FSBAppTransparentTheme" parent="FSBAppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="FSBAppWeightTheme" parent="FSBAppTheme">
        <item name="colorPrimaryDark">#00BDB3</item>
    </style>

    <style name="FSBAppPillowTheme" parent="FSBAppTheme">
        <item name="colorPrimaryDark">@color/pillow</item>
    </style>

    <style name="bottom_top_windowAniStyle">
        <item name="android:windowEnterAnimation">@anim/slie_up_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slie_down_from_top</item>
    </style>

    <style name="loadingDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NoDisplay" parent="@android:style/Theme.NoDisplay"></style>


    <style name="customDialog" parent="FSBAppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="btn_common">
        <item name="android:background">@drawable/btn_common</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>
    <style name="btn_common_white">
        <item name="android:background">@drawable/btn_common_white</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:textSize">@dimen/text_size_17</item>
    </style>
</resources>