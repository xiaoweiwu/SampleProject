<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="top_menu_icon">
        <item name="android:layout_width">@dimen/menu_width</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="top_menu_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">@dimen/menu_width</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>